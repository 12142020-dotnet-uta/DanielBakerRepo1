@model ModelLayer.ViewModels.PlayerViewModel

@{
    ViewData["Title"] = "EditPlayer";
}

<h1>EditPlayer</h1>

<h4>PlayerViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditedPlayer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlayerId" class="control-label"></label>
                <input asp-for="PlayerId" class="form-control" />
                <span asp-validation-for="PlayerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fname" class="control-label"></label>
                <input asp-for="Fname" class="form-control" />
                <span asp-validation-for="Fname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lname" class="control-label"></label>
                <input asp-for="Lname" class="form-control" />
                <span asp-validation-for="Lname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="numWins" class="control-label"></label>
                <input asp-for="numWins" class="form-control" />
                <span asp-validation-for="numWins" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="numLosses" class="control-label"></label>
                <input asp-for="numLosses" class="form-control" />
                <span asp-validation-for="numLosses" class="text-danger"></span>
            </div>
            <img src="@Model.JpegStringImage" alt="Alternate Text" style="height: 100px" />
            <div class="form-group">
                <label asp-for="IformFileImage" class="control-label"></label>
                <input asp-for="IformFileImage" class="form-control" />
                <span asp-validation-for="IformFileImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
